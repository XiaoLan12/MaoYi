<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/common_color">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:background="@drawable/home_search_linearlayout"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/ll_search">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_launcher"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:hint="请输入关键字"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_launcher"/>
        </LinearLayout>
    <com.flyco.tablayout.SlidingTabLayout
    android:id="@+id/slidingtablayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:layout_marginTop="0.5dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    tl:tl_textUnselectColor="@color/common_h2"
    tl:tl_indicator_gravity="BOTTOM"
    tl:tl_indicator_color="@color/common_color"
    tl:tl_textSelectColor="@color/common_color"
    tl:tl_textBold="SELECT"
    tl:tl_tab_space_equal="true"
    tl:tl_underline_color="@color/white"
        tl:tl_divider_width="1dp"
        tl:tl_divider_color="@color/gray1"
        tl:tl_divider_padding="8dp"
    tl:tl_underline_height="1dp"/>
    <View
        style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>