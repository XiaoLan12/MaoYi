<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/titel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_h"
        android:textSize="@dimen/font_normal2"
        android:layout_toRightOf="@+id/photo_iv"
        android:layout_alignTop="@+id/photo_iv"
        android:layout_marginLeft="@dimen/dp_5"
        tools:text="商品名"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:layout_toRightOf="@+id/photo_iv"
            android:layout_alignBottom="@+id/photo_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="￥"/>
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_color"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignBottom="@+id/photo_iv"
        android:textSize="@dimen/font_normal3"
        tools:text="168.00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_selector"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_5"
        android:layout_alignBottom="@+id/photo_iv"
        android:layout_marginRight="@dimen/dp_5"
        android:text="找相似"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_below="@+id/photo_iv"
        android:layerType="software"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_dotted_line"/>

</LinearLayout>