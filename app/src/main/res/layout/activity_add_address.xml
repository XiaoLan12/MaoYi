<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:leftButtonIcon="@drawable/ic_back"
        app:title="添加收货地址"/>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/addaddress_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:gravity="center_vertical">
            <TextView
                style="@style/MY.Theme.Widget.Text"
                android:text="收货人:"/>

            <EditText
                android:id="@+id/consignee_address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:paddingLeft="4dp"
                android:background="@null" />
        </LinearLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
            android:layout_below="@+id/addaddress_ll1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/view1"/>
        <LinearLayout
            android:id="@+id/addaddress_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:gravity="center_vertical">
            <TextView
                style="@style/MY.Theme.Widget.Text"
                android:text="手机号:"/>
            <EditText
                android:id="@+id/phone_address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:paddingLeft="4dp"
                android:background="@null"/>
        </LinearLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
            android:layout_below="@+id/addaddress_ll2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/view2"/>
        <RelativeLayout
            android:id="@+id/addaddress_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            >
            <TextView
                style="@style/MY.Theme.Widget.Text"
                android:layout_centerVertical="true"
                android:text="所在地:"/>
            <TextView
                android:id="@+id/area_address_tv"
                style="@style/MY.Theme.Widget.Text"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/area_address_iv"
                />
            <ImageView
                android:id="@+id/area_address_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/ic_launcher"
                android:layout_alignParentRight="true"
                android:background="@null"/>
        </RelativeLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
            android:layout_below="@+id/addaddress_ll3"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/view3"/>
        <LinearLayout
            android:id="@+id/addaddress_ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            >
            <TextView
                style="@style/MY.Theme.Widget.Text"
                android:layout_gravity="top"
                android:text="详细地址:"/>
            <EditText
                android:id="@+id/detailaddress_address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:gravity="top"
                android:minHeight="@dimen/dp_60"
                android:paddingLeft="4dp"
                android:background="@null"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sava_address_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/addaddress_ll4"
            android:layout_marginTop="@dimen/dp_45"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@color/common_color"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
