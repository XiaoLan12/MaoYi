<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:leftButtonIcon="@drawable/icon_back"
        app:title="注册"/>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

    <com.yizhisha.maoyi.widget.ClearEditText
        android:id="@+id/account_register_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="@dimen/font_normal"
        android:layout_marginTop="60dp"
        android:drawablePadding="@dimen/dp_5"
        android:hint="@string/hint_input_phone"
        android:textColorHint="@color/common_h2"
        android:padding="@dimen/dp_10" />
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/common_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_view1"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/code_register_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_input_code"
            android:textSize="@dimen/font_normal"
            android:drawablePadding="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:textColorHint="@color/common_h2" />
        <TextView
            android:id="@+id/getcode_register_tv"
            style="@style/MY.Theme.Widget.Text"
            android:textColor="@color/common_color"
            android:layout_marginRight="@dimen/dp_10"
            android:text="获取验证码"/>
    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/common_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_view1"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        >
        <com.yizhisha.maoyi.widget.ClearEditText
            android:id="@+id/setpwd_register_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/font_normal"
            android:hint="请设置6~20位密码"
            android:drawablePadding="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:password="true"
            android:textColorHint="@color/common_h2"
          />
        <ImageView
            android:id="@+id/setpwd_register_iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/icon_close" />
    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/common_color"/>

    <Button
        android:id="@+id/sure_findpwd_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="注册"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/font_normal2"
        android:background="@drawable/shape_redbtn_selector"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="@dimen/dp_10">
        <CheckBox
            android:id="@+id/terms_cb"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:checked="true"
            android:background="@drawable/shape_checxbox_selector"
            android:button="@null" />
        <TextView
            android:id="@+id/terms_register_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_toRightOf="@+id/terms_cb"
            android:layout_toLeftOf="@+id/login_register_tv"
            android:text="我已同意(毛衣商城条款)"/>
        <TextView
            android:id="@+id/login_register_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_color"
            android:text="已有账号?立即登录"/>
    </LinearLayout>
</LinearLayout>
