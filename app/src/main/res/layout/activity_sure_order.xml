<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        android:layout_alignParentTop="true"
        android:background="@color/common_color"
        app:leftButtonIcon="@drawable/icon_back"
        app:title="确认订单"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/shippingaddress_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_16">

                    <TextView
                        android:id="@+id/consignee_tv"
                        style="@style/MY.Theme.Widget.Text"
                        android:text="收货人:" />

                    <TextView
                        android:id="@+id/consignee_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="林先生" />

                    <TextView
                        android:id="@+id/consignee_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="right"
                        tools:text="1412523452345" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_10"
                    >
                    <TextView
                        android:id="@+id/shippingaddress_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                    <ImageView
                        android:id="@+id/shippingaddress_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/ic_launcher"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/distribution_way_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_10">
                <TextView
                    style="@style/MY.Theme.Widget.Text"
                    android:layout_centerVertical="true"
                    android:text="配送方式"/>
                <TextView
                    android:id="@+id/distribution_way_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/distribution_way_iv"
                    android:text="快递发货"/>
                <ImageView
                    android:id="@+id/distribution_way_iv"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
            <RelativeLayout
                android:id="@+id/pay_way_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">
                <TextView
                    style="@style/MY.Theme.Widget.Text"
                    android:layout_centerVertical="true"
                    android:text="优惠卷"/>
                <TextView
                    android:id="@+id/pay_way_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/pay_way_iv"
                    android:text="没有优惠卷可用"/>
                <ImageView
                    android:id="@+id/pay_way_iv"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
                android:layout_height="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/zhifubao_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"/>
                <CheckBox
                    android:id="@+id/zhifubao_cb"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/checkbox_style"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                   />
            </RelativeLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
                />
            <RelativeLayout
                android:id="@+id/weixin_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"/>
                <CheckBox
                    android:id="@+id/weixin_cb"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/checkbox_style"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    />
            </RelativeLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
                android:layout_height="@dimen/dp_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@color/white">
                <TextView
                    style="@style/MY.Theme.Widget.Text"
                    android:gravity="top"
                    android:text="买家留言:"/>
                <EditText
                    android:id="@+id/remark_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_60"
                    android:hint="请输入您对本次交易的要求(选填)"
                    android:textColorHint="@color/common_h3"
                    android:textSize="@dimen/font_normal"
                    android:background="@null"/>
            </LinearLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="合计:￥"/>
        <TextView
            android:id="@+id/sureorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45"
            android:gravity="center"
            android:background="@color/common_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="提交订单"/>
    </RelativeLayout>
</RelativeLayout>
