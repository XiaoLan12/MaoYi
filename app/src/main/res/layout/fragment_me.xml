<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:rightButtonIcon="@drawable/ic_launcher"
        android:background="@color/common_color"
        app:title=""/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/userInfo_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/common_color">
            <ImageView
                android:id="@+id/userPhoto_iv"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/userName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/userPhoto_iv"
                    android:layout_marginLeft="@dimen/dp_10"
                    tools:text="隔壁老王"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/ic_launcher"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myorder_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_14"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_14">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_h1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/font_normal2"
                    android:text="我的订单"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_h2"
                    android:layout_toLeftOf="@+id/iv1"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:text="查看更多订单"/>
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/ic_launcher"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">
                <LinearLayout
                    android:id="@+id/unpayment_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ic_launcher"/>

                        <TextView
                            android:id="@+id/unpaymentNum_iv"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14"
                            android:layout_gravity="right"
                            android:background="@drawable/message_circle"
                            android:text="1"
                            android:gravity="top|center_horizontal"
                            android:paddingBottom="@dimen/dp_2"
                            android:textColor="@color/common_color"
                            android:textSize="@dimen/font_small" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_h"
                        android:text="待付款"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/unshipping_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ic_launcher"/>
                        <ImageView
                            android:id="@+id/unshippingNum_iv"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_launcher"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_h"
                        android:text="待发货"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/unreceive_goods_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ic_launcher"/>
                        <ImageView
                            android:id="@+id/unreceive_goodsNum_iv"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_launcher"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_h"
                        android:text="待付款"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/finish_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ic_launcher"/>
                        <ImageView
                            android:id="@+id/finishNum_iv"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_launcher"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_h"
                        android:text="已完成"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/refund_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ic_launcher"/>
                        <ImageView
                            android:id="@+id/refundNum_iv"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_launcher"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_h"
                        android:text="退款/售后"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
                android:layout_height="@dimen/dp_8"/>
            <RelativeLayout
                android:id="@+id/setting_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/setting_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置中心"
                    android:layout_toRightOf="@+id/setting_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/coupon_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/coupon_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡券包"
                    android:layout_toRightOf="@+id/coupon_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/collect_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/collect_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:layout_toRightOf="@+id/collect_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/footprint_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/footprint_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的足迹"
                    android:layout_toRightOf="@+id/footprint_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/myEvaluation_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/myEvaluation_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的评价"
                    android:layout_toRightOf="@+id/myEvaluation_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/aboutUs_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/aboutUs_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:layout_toRightOf="@+id/aboutUs_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

            <RelativeLayout
                android:id="@+id/serviceHotline_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14">
                <ImageView
                    android:id="@+id/serviceHotline_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/serviceHotline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服热线:"
                    android:layout_toRightOf="@+id/serviceHotline_iv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0769-86470968"
                    android:layout_toRightOf="@+id/serviceHotline_tv"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_normal2"
                    android:textColor="@color/common_h1"/>
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>
            <View
                style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"/>
            </LinearLayout>

    </ScrollView>


</LinearLayout>