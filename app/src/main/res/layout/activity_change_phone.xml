<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        android:background="@color/common_color"
        app:leftButtonIcon="@drawable/icon_back"
        app:title="修改手机号码"/>
    <LinearLayout
        android:id="@+id/binded_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/dp_14">
        <TextView
            android:id="@+id/bind_tv"
            style="@style/MY.Theme.Widget.Text"
            />
        <TextView
            android:id="@+id/bind_phone_tv"
            style="@style/MY.Theme.Widget.Text"
            android:text=""/>

    </LinearLayout>
    <com.yizhisha.maoyi.widget.ClearEditText
        android:id="@+id/phone_chagephone_et"
        style="@style/MY.Theme.Widget.EditText"
        android:background="@drawable/shape_gray_selector"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:hint="@string/new_phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <EditText
            android:id="@+id/getcode_chagephone_et"
            style="@style/MY.Theme.Widget.EditText"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="@drawable/shape_gray_selector"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_code"
            />

        <TextView
            android:id="@+id/getcode_chagephone_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/red"
            android:background="@drawable/shape_gray_selector"
            android:layout_marginRight="@dimen/dp_10"
            android:text="获取验证码"/>
    </LinearLayout>

    <Button
        android:id="@+id/sava_chagephone_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_pink"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dp_20"
        android:text="确认修改"/>

</LinearLayout>