<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.yizhisha.maoyi.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        android:background="@color/common_color"
        app:leftButtonIcon="@drawable/ic_back"
        android:layout_alignParentTop="true"
        app:rightButtonIcon="@drawable/ic_launcher"
        app:title="设置"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/personalInfo_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_h"
            android:text="个人资料"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

    <RelativeLayout
        android:id="@+id/changePwd_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_h"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

        <RelativeLayout
            android:id="@+id/changePhone_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_14">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/common_h"
                android:text="修改手机号码"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"/>
        </RelativeLayout>
        <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

    <RelativeLayout
        android:id="@+id/goodaddress_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_h"
            android:text="收货地址"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/common_h"
            android:text="管理收货地址"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    <View
        android:layout_height="@dimen/dp_10"
        style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

    <RelativeLayout
        android:id="@+id/clean_cache_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_h"
            android:text="清空缓存"/>
        <TextView
            android:id="@+id/cache_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cache_iv"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/common_h"
            android:text=""/>
        <ImageView
            android:id="@+id/cache_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_h"

            android:text="给我评价"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_redbtn_selector"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20"
        android:text="退出当前账号"/>
    </RelativeLayout>