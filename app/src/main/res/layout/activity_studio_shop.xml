<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/work_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    <RelativeLayout
        android:id="@+id/personalInfo_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_back"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="@drawable/home_search_linearlayout"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/ll_search">
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/icon_search"/>
                <com.yizhisha.maoyi.widget.ClearEditText
                    android:id="@+id/search_selectyarn_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:hint="请输入关键字"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/icon_search"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_below="@+id/rl">
            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:src="@drawable/ic_back"/>
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_iv"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal2"
                tools:text="名字"/>
            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/white"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:paddingRight="8dp"
                android:background="@drawable/shape_pink"/>



        </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_select_xiaoliang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="销量优先"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_select_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_select_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"/>
            <ImageView
                android:id="@+id/img_select_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_select_not"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_select_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="筛选"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_45">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <com.yizhisha.maoyi.widget.CommonLoadingView
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </com.yizhisha.maoyi.widget.CommonLoadingView>
    </RelativeLayout>
    </LinearLayout>

