<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
   <RelativeLayout
       android:id="@+id/coupons_rl"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:background="@color/blue">
       <TextView
           android:id="@+id/tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/usable_tv"
           android:textColor="@color/white"
           android:textSize="24sp"
           android:layout_alignLeft="@+id/usable_tv"
           android:layout_marginBottom="@dimen/dp_16"
           android:text="￥"/>
       <TextView
           android:id="@+id/amount_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/usable_tv"
           android:layout_toRightOf="@+id/tv"
           android:textColor="@color/white"
           android:layout_marginBottom="@dimen/dp_14"
           android:textSize="40sp"
           android:text="20"/>
       <TextView
           android:id="@+id/usable_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:textColor="@color/white"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/dp_16"
           android:text="满99元可用"/>

   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h"
            android:textSize="@dimen/font_normal3"
            android:text="店主福利优惠券"/>
        <TextView
            android:id="@+id/instruction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h2"
            android:layout_below="@+id/title_tv"
            android:textSize="@dimen/font_normal"
            android:layout_marginTop="@dimen/dp_5"
            android:text="店主福利优惠券"/>
        <TextView
            android:id="@+id/validity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h2"
            android:textSize="@dimen/font_normal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="店主福利优惠券"/>
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>