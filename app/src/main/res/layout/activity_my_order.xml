<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/order_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/common_color"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/ic_back"
                android:padding="@dimen/dp_5"/>
            <com.yizhisha.maoyi.widget.ClearEditText
                android:id="@+id/search_et"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@drawable/home_search_linearlayout"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请输入关键字"
                />
            <TextView
                android:id="@+id/query_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textColor="@color/common_h1"
                android:background="@drawable/home_search_linearlayout"
                android:text="取消"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/order_normal__rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/common_color">
            <ImageView
                android:id="@+id/back_normal_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/ic_back"
                android:padding="@dimen/dp_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal3"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:text="我的订单"/>
            <ImageView
                android:id="@+id/query_normal_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/ic_launcher"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_5"/>
        </RelativeLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/search_myorder_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <com.yizhisha.maoyi.widget.ClearEditText
            android:id="@+id/search_myorder_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入商品名"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="@color/common_h3"
            android:textSize="@dimen/font_normal"
            />
        <TextView
            android:id="@+id/search_myorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellow1"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="搜索"/>
        <TextView
            android:id="@+id/cacel_myorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white"
            android:text="取消"/>
    </LinearLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingtablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        tl:tl_textUnselectColor="@color/common_h2"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_color="@color/common_color"
        tl:tl_textSelectColor="@color/common_color"
        tl:tl_textBold="SELECT"
        tl:tl_underline_color="@color/white"
        tl:tl_underline_height="1dp"/>
    <View
        style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
