<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tradelpaymentpay_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:text="(含运费￥10.00)" />
        <TextView
            android:id="@+id/tradeltotal_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_toLeftOf="@+id/tradelpaymentpay_tv"
            tools:text="￥168.00"
             />
        <TextView
            android:id="@+id/tradeltotalTv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_toLeftOf="@+id/tradeltotal_tv"
            android:text="合计:" />
        <TextView
            android:id="@+id/tradelnumber_total_tv"
            style="@style/MY.Theme.Widget.Text"
            android:layout_marginRight="@dimen/dp_5"

            android:layout_toLeftOf="@+id/tradeltotalTv"
            />
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_16"
        android:gravity="right">
        <TextView
            android:id="@+id/refunds_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:text="申请退款"/>
        <TextView
            android:id="@+id/cancel_the_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="取消订单"/>
        <TextView
            android:id="@+id/order_track_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="订单跟踪"/>
        <TextView
            android:id="@+id/delete_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="删除订单"/>
        <TextView
            android:id="@+id/confirm_goods_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_pink_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:textColor="@color/common_color"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/againbuy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_pink_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:textColor="@color/common_color"
            android:text="再次购买"/>

        <TextView
            android:id="@+id/immediate_payment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_pink_selector"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"
            android:text="立即付款"/>
    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:layout_height="@dimen/dp_8"
        />
</LinearLayout>