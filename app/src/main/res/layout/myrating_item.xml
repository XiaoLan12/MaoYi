<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/titel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h"
            android:textSize="@dimen/font_normal2"
            android:layout_toRightOf="@+id/photo_iv"
            android:layout_alignTop="@+id/photo_iv"
            android:layout_marginLeft="@dimen/dp_5"
            tools:text="商品名"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:layout_toRightOf="@+id/photo_iv"
            android:layout_alignBottom="@+id/photo_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="￥"/>
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:layout_toRightOf="@+id/tv1"
            android:layout_alignBottom="@+id/photo_iv"
            android:textSize="@dimen/font_normal3"
            tools:text="168.00"/>
    </RelativeLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h2"
            tools:text="2017-06-18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h2"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="颜色:"/>
        <TextView
            android:id="@+id/color_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_h2"
            tools:text="#1231"/>
        <TextView
            android:id="@+id/add_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue_selector"
            android:paddingTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_14"
            android:textColor="@color/blue"
            android:text="立即评价"/>
    </LinearLayout>
    <View style="@style/MY.Theme.Widget.Divider.Line.Vertical"
        android:layout_height="@dimen/dp_10"/>
</LinearLayout>